datasource db {
    provider = "sqlite"
    url = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model numbers_stats {
    user_id Int @id
    win     Int @default(0)
    lose    Int @default(0)
}

model numbers_records {
    id             Int @id @default(autoincrement())
    user_id        Int
    user_name      String
    answer         Int
    win            Boolean
    date           DateTime
    time_limit     Int
    remaining_time Float
}
